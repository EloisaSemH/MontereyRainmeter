<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net6.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
        <UseWindowsForms>true</UseWindowsForms>
    </PropertyGroup>

    <ItemGroup>
      <None Update="appsettings.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="layout.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
      <None Update="locale.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Page Update="Widgets\Clock.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Widgets\ClockViewModel.cs">
        <DependentUpon>Clock.xaml</DependentUpon>
      </Compile>
      <Compile Update="Widgets\ClockSettings.cs">
        <DependentUpon>Clock.xaml</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Remove="Fonts\SF-Pro-Display-Light.otf" />
      <Resource Include="Fonts\SF-Pro-Display-Light.otf" />
      <None Remove="Fonts\SF-Pro-Display-Medium.otf" />
      <Resource Include="Fonts\SF-Pro-Display-Medium.otf" />
      <None Remove="Fonts\SF-Pro-Display-Regular.otf" />
      <Resource Include="Fonts\SF-Pro-Display-Regular.otf" />
      <None Remove="Fonts\SF-Pro-Display-Semibold.otf" />
      <Resource Include="Fonts\SF-Pro-Display-Semibold.otf" />
      <None Remove="Fonts\Arial-Rounded-Bold.otf" />
      <Resource Include="Fonts\Arial-Rounded-Bold.otf" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="WPF-UI" Version="2.0.3" />
    </ItemGroup>

</Project>
