<UserControl x:Class="uWidgets.Widgets.Clock.Controls.DigitalClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Grid Name="Grid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" VerticalAlignment="Bottom">
            <TextBlock Name="Date" HorizontalAlignment="Stretch" FontFamily="{StaticResource SfProRegular}"
                       Foreground="{DynamicResource AccentFillColorDefaultBrush}" />
        </Viewbox>
        <Viewbox Grid.Row="1" Name="TimeViewbox" VerticalAlignment="Top">
            <TextBlock Name="Time" HorizontalAlignment="Stretch" FontFamily="{StaticResource SfProRegular}"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
        </Viewbox>
    </Grid>
</UserControl>